# Supabase keys
SUPABASE_URL=<SUPABASE_URL>
SUPABASE_KEY=<SUPABASE_KEY>
JWT_SECRET=<JWT_SECRET>

# Encryption Key (useful for encrypting secrets in the database)
ENCRYPTION_KEY=<ENCRYPTION_KEY>

# OpenAI API Key
OPENAI_API_KEY=<OPENAI_API_KEY>

# Gemini API Configuration
GEMINI_API_KEY=<GEMINI_API_KEY>
GEMINI_VISION_MODEL=gemini-2.5-flash-preview-05-20

# local development
HOST=0.0.0.0
PORT=8000
DEV_MODE=true

# Audio Debug System Configuration
# Enable/disable the audio debug system for saving voice commands as WAV files
AUDIO_DEBUG=true

# Custom debug directory (optional, defaults to ./debug_audio)
AUDIO_DEBUG_DIR=./debug_audio

# Maximum number of debug files to keep (optional, defaults to 50)
# Older files are automatically deleted when this limit is exceeded
AUDIO_DEBUG_MAX_FILES=50

# TTS Provider Configuration
# Options: GEMINI, ELEVEN_LABS, OPENAI, EDGE_TTS
TTS_PROVIDER=EDGE_TTS

# Your ElevenLabs API key from https://elevenlabs.io/
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# Edge TTS Configuration (if using EDGE_TTS)
# No API key required - completely free!
EDGE_TTS_DEFAULT_VOICE=en-US-AvaNeural
EDGE_TTS_DEFAULT_FORMAT=AUDIO_24KHZ_96KBITRATE_MONO_MP3
EDGE_TTS_DEFAULT_SPEED=1.0

# Flash Live Mode Configuration
# Set to true for current websocket-based system (default)
# Set to false for legacy mode where Flash 2.5 handles tool calling
USE_FLASH_LIVE_AS_BASE=true
